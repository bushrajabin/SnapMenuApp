{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["jest"],
    "strict": true,
    "moduleResolution": "bundler",
    "customConditions": ["react-native"],
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
